<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= yield :header %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="header">
	<a href="#" class="logo"><i class="fa fa-fire fa-2x" style="color: #FF6666"></i> lambda</a>
	<% if admin_signed_in? %>
		<%= link_to destroy_admin_session_path, :method => :delete, class: 'view-article' do%>
			<i class="fa fa-sign-out"></i>
		<% end %>
	<% end %>
	<a href="" class="view-article"><i class="fa fa-user"></i></a>
	<a href="" class="view-article"><i class="fa fa-sitemap"></i></a>
	<a href="<%= articles_path %>" class="view-article"><i class="fa fa-archive"></i></a>
	<% if admin_signed_in? %>
		<a href="<%= new_article_path %>" class="view-article"><i class="fa fa-pencil"></i></a>
	<% end %>
</div>
<div class="container">
	<%= yield %>
</div>

