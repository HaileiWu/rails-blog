<h2>文章编辑</h2>
<hr>
<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label '标题' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
 
  <div class="form-group">
    <%= f.label '索引' %>
    <%= f.text_field :slug, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label '内容' %>
    <%= f.text_area :content, class: 'form-control', rows: 40 %>
  </div>
  
  <div class="form-group">
    <%= f.submit '提交', class: 'btn btn-primary' %>
  </div>
<% end %>